			<artifactId>discourse.parser.evaluation</artifactId>
			<version>1.0.2</version>
		</dependency>
		
		<dependency>
			<groupId>org.cleartk</groupId>
			<artifactId>cleartk-eval</artifactId>
			<version>2.0.0</version>
		</dependency>
		
		<dependency>
			<groupId>org.cleartk</groupId>
